version: '3.8'

services:

  nginx-proxy-manager:
    image: 'jc21/nginx-proxy-manager:latest'
    container_name: 'nginx-proxy-manager'
    restart: unless-stopped
    ports:
      - '80:80'
      - '443:443'

      # Web UI
      - '{{ midgard.ip.private }}:81:81'

    volumes:
      - ./data:/data
      - ./letsencrypt:/etc/letsencrypt